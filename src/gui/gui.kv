#:kivy 1.0.9

<GuiWidget>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Image:
            id: _road
            source: 'assets/spaceroad.gif'
            anim_delay: -1
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 0.35)
            canvas.after:
                Color:
                    rgba: 0.4, 0.88, 1, 1
                Line:
                    width: 2
                    ellipse: self.x , self.y, self.width, 40 , -90, 90
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 50
                    ellipse: self.x , self.y - 50, self.width, 40 , -90, 90
        # BoxLayout:
        #     size_hint: (1, 0.05)



        BoxLayout:
            orientation: 'horizontal'
            padding: [0, 20, 0, 20]
            size_hint: (1, 0.40)
            SpeedMeter:
                id: _speed
                min: 0
                max: 280
                tick: 20
                start_angle: -120
                end_angle: 120
                subtick: 2
                label: 'Km/h'
                value: 0
                cadran_color: '#64e0ff'
                needle_color: '#ff00ff'
                sectors: (0, '#000000')
            BoxLayout: 
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 1, 0, 1, 1
                    Line:
                        width: 3
                        rectangle: self.x + 20, self.y + 10, self.width - 40, self.height - 20

                    Color:
                        rgba: 1, 0.7, 1, 1
                    Line:
                        width: 2
                        rectangle: self.x + 20, self.y + 10, self.width - 40, self.height - 20

                    Color:
                        rgba: 1, 0, 1, 1
                CarroWidget:
                BoxLayout:
                    orientation: 'vertical'
                    padding: [0, 0, 0, 20]
                    Label:
                        id: _operMode
                        opMode: 'Parked'
                        text: '[font=screaming_neon][color=ffe0ff]' + str(_operMode.opMode) + '[/color][/font]' 
                        markup: True
                    Label:
                        id: _acceleration
                        accVal: 0
                        text: '[font=screaming_neon][color=ffe0ff]Acceleration -- ' + str(_acceleration.accVal) + ' m/s[sup]2[/sup][/color][/font]' 
                        markup: True
                    Label:
                        id: _deceleration
                        decVal: 0
                        text: '[font=screaming_neon][color=ffe0ff]Deceleration -- ' + str(_deceleration.decVal) + ' m/s[sup]2[/sup][/color][/font]' 
                        markup: True
                    Label:
                        text: '[font=screaming_neon][color=ffe0ff]Weight -- 1500 Kg[/color][/font]' 
                        markup: True
            SpeedMeter:
                id: _rpm
                min: 0
                max: 9
                tick: 1
                start_angle: -120
                end_angle: 120
                subtick: 4
                label: 'rpm'
                cadran_color: '#64e0ff'
                needle_color: '#ff00ff'
                sectors: [0, '#000000', 7, '#ff20c6', 8, '#ff2079', 9]
                sector_width: 5
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.25)
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: '[font=screaming_neon][size=18][color=64e0ff]Brake Pedal[/color][/size][/font]' 
                    markup: True
                Slider:
                    id: _brakeSlider
                    size_hint_y: 1.6
                    min: 0
                    max: 100
                    step: 1
                    orientation: 'vertical'
                Label:
                    text: '[font=screaming_neon][color=64e0ff]' + str(_brakeSlider.value) + '[/color][/font]' 
                    markup: True

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: '[font=screaming_neon][size=18][color=64e0ff]Accelerator Pedal[/color][/size][/font]' 
                    markup: True
                Slider:
                    id: _accelSlider
                    size_hint_y: 1.6
                    min: 0
                    max: 100
                    step: 1
                    orientation: 'vertical'
                Label:
                    text: '[font=screaming_neon][color=64e0ff]' + str(_accelSlider.value) + '[/color][/font]' 
                    markup: True

            BoxLayout:
                orientation: 'vertical'
                padding: (0, self.height / 4)
                Label:
                    text: '[font=screaming_neon][size=18][color=64e0ff]Hand Brake[/color][/size][/font]' 
                    markup: True
                Switch:
                    active: True
                    id: _parkingSwitch
        